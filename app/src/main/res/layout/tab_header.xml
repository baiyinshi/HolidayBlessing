<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@drawable/topbar" >

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/app_name"
        android:gravity="center_vertical"
        android:paddingBottom="7.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="7.0dip"
        android:src="@drawable/icon_back"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/right_img"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@string/app_name"
            android:duplicateParentState="true"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingRight="10.0dip" >

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:shadowDx="0.0"
            android:shadowDy="2.0"
            android:shadowRadius="2.0"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/normal_color_title"
            android:textSize="@dimen/top_bar_title_size" />

        <TextView
            android:id="@+id/title_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:shadowColor="@color/top_bar_title_shadow_color"
            android:shadowDx="0.0"
            android:shadowDy="2.0"
            android:shadowRadius="2.0"
            android:singleLine="true"
            android:textColor="@color/normal_color_title"
            android:textSize="@dimen/top_bar_title_num_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/test_tag"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:shadowColor="@color/top_bar_title_shadow_color"
            android:singleLine="true"
            android:textColor="@color/normal_color_title"
            android:textSize="@dimen/top_bar_title_size"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>